<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:String x:Key="AuthWindowTitle">Вход / Регистрация</sys:String>

    <sys:String x:Key="LoginLabel">Логин:</sys:String>
    <sys:String x:Key="PasswordLabel">Пароль:</sys:String>
    <sys:String x:Key="LoginButton">Войти</sys:String>

    <sys:String x:Key="LoginRequiredLabel">Логин:*</sys:String>
    <sys:String x:Key="SurnameRequiredLabel">Фамилия:*</sys:String>
    <sys:String x:Key="NameRequiredLabel">Имя:*</sys:String>
    <sys:String x:Key="PatronymicLabel">Отчество:</sys:String>
    <sys:String x:Key="PhoneNumberRequiredLabel">Номер телефона:*</sys:String>
    <sys:String x:Key="PasswordRequiredLabel">Пароль:*</sys:String>
    <sys:String x:Key="ConfirmPasswordRequiredLabel">Подтвердите пароль:*</sys:String>
    <sys:String x:Key="RegisterButton">Зарегистрироваться</sys:String>

    <sys:String x:Key="AuthVM.Title.Login">Авторизация</sys:String>
    <sys:String x:Key="AuthVM.Title.Register">Регистрация</sys:String>
    <sys:String x:Key="AuthVM.SwitchLink.ToRegister">Нет аккаунта? Зарегистрируйтесь</sys:String>
    <sys:String x:Key="AuthVM.SwitchLink.ToLogin">Уже есть аккаунт? Войдите</sys:String>

    <sys:String x:Key="Status.EnterLoginPassword">Введите логин и пароль.</sys:String>
    <sys:String x:Key="Status.AccountBlocked">Ваш аккаунт заблокирован!</sys:String>
    <sys:String x:Key="Status.LoginSuccessful">Успешный вход.</sys:String>
    <sys:String x:Key="Status.InvalidLoginOrPassword">Неверный логин или пароль.</sys:String>
    <sys:String x:Key="Status.FillAllRequiredFields">Заполните все обязательные поля.</sys:String>
    <sys:String x:Key="Status.NameNoDigits">Имя, фамилия и отчество не должны содержать цифры.</sys:String>
    <sys:String x:Key="Status.InvalidPhoneFormat">Неверный формат номера. Используйте формат: +375XXXXXXXXX</sys:String>
    <sys:String x:Key="Status.PhoneNoLetters">Номер телефона не должен содержать буквы.</sys:String>
    <sys:String x:Key="Status.PasswordTooShort">Пароль слишком короткий (минимум 5 символов).</sys:String>
    <sys:String x:Key="Status.PasswordsDoNotMatch">Пароли не совпадают.</sys:String>
    <sys:String x:Key="Status.RegistrationSuccessful">Регистрация прошла успешно! Теперь вы можете войти.</sys:String>
    <sys:String x:Key="Status.RegistrationFailedUserExists">Ошибка регистрации. Возможно, пользователь с таким логином уже существует.</sys:String>

</ResourceDictionary>