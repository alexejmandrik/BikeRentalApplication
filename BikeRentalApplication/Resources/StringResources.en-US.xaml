<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:String x:Key="AuthWindowTitle">Login / Registration</sys:String>

    <sys:String x:Key="LoginLabel">Login:</sys:String>
    <sys:String x:Key="PasswordLabel">Password:</sys:String>
    <sys:String x:Key="LoginButton">Login</sys:String>

    <sys:String x:Key="LoginRequiredLabel">Login:*</sys:String>
    <sys:String x:Key="SurnameRequiredLabel">Surname:*</sys:String>
    <sys:String x:Key="NameRequiredLabel">Name:*</sys:String>
    <sys:String x:Key="PatronymicLabel">Patronymic:</sys:String>
    <sys:String x:Key="PhoneNumberRequiredLabel">Phone Number:*</sys:String>
    <sys:String x:Key="PasswordRequiredLabel">Password:*</sys:String>
    <sys:String x:Key="ConfirmPasswordRequiredLabel">Confirm Password:*</sys:String>
    <sys:String x:Key="RegisterButton">Register</sys:String>

    <sys:String x:Key="AuthVM.Title.Login">Authorization</sys:String>
    <sys:String x:Key="AuthVM.Title.Register">Registration</sys:String>
    <sys:String x:Key="AuthVM.SwitchLink.ToRegister">No account? Register</sys:String>
    <sys:String x:Key="AuthVM.SwitchLink.ToLogin">Already have an account? Login</sys:String>

    <sys:String x:Key="Status.EnterLoginPassword">Please enter login and password.</sys:String>
    <sys:String x:Key="Status.AccountBlocked">Your account is blocked!</sys:String>
    <sys:String x:Key="Status.LoginSuccessful">Login successful.</sys:String>
    <sys:String x:Key="Status.InvalidLoginOrPassword">Invalid login or password.</sys:String>
    <sys:String x:Key="Status.FillAllRequiredFields">Please fill in all required fields.</sys:String>
    <sys:String x:Key="Status.NameNoDigits">Name, surname, and patronymic should not contain digits.</sys:String>
    <sys:String x:Key="Status.InvalidPhoneFormat">Invalid phone number format. Use format: +375XXXXXXXXX</sys:String>
    <sys:String x:Key="Status.PhoneNoLetters">Phone number should not contain letters.</sys:String>
    <sys:String x:Key="Status.PasswordTooShort">Password is too short (minimum 5 characters).</sys:String>
    <sys:String x:Key="Status.PasswordsDoNotMatch">Passwords do not match.</sys:String>
    <sys:String x:Key="Status.RegistrationSuccessful">Registration successful! You can now log in.</sys:String>
    <sys:String x:Key="Status.RegistrationFailedUserExists">Registration error. A user with this login may already exist.</sys:String>

</ResourceDictionary>