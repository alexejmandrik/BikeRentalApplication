<Window x:Class="BikeRentalApplication.View.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BikeRentalApplication.View"
        mc:Ignorable="d"
        Title="Вход / Регистрация" Height="600" Width="450"
    WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="Авторизация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">

            <StackPanel x:Name="LoginPanel" Visibility="Visible">
                <Label Content="Логин:" />
                <TextBox x:Name="LoginUsernameTextBox" Margin="0,0,0,10"/>

                <Label Content="Пароль:" />
                <PasswordBox x:Name="LoginPasswordBox" Margin="0,0,0,15"/>

                <Button Content="Войти" Click="LoginButton_Click" Padding="10,5" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel x:Name="RegisterPanel" Visibility="Collapsed">
                <Label Content="Логин:"/>
                <TextBox x:Name="RegisterUsernameTextBox" Margin="0,0,0,10"/>

                <Label Content="Фамилия:"/>
                <TextBox x:Name="RegisterSurnameTextBox" Margin="0,0,0,10" ToolTip="Введите Фамилию"/>

                <Label Content="Имя:"/>
                <TextBox x:Name="RegisterNameTextBox" Margin="0,0,0,10" ToolTip="Введите Имя"/>

                <Label Content="Отчество:"/>
                <TextBox x:Name="RegisterPatronymicTextBox" Margin="0,0,0,10" ToolTip="Введите Отчество"/>

                <Label Content="Номер телефона:"/>
                <TextBox x:Name="RegisterPhoneTextBox" Margin="0,0,0,10" ToolTip="Введите номер телефона (например, +375291234567)"/>

                <Label Content="Пароль:"/>
                <PasswordBox x:Name="RegisterPasswordBox" Margin="0,0,0,10"/>

                <Label Content="Подтвердите пароль:"/>
                <PasswordBox x:Name="RegisterConfirmPasswordBox" Margin="0,0,0,15"/>

                <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Padding="10,5" HorizontalAlignment="Stretch"/>
            </StackPanel>

        </Grid>

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,15,0,0">
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink x:Name="SwitchLink" Click="SwitchLink_Click">
                    <Run Text="Нет аккаунта? Зарегистрироваться"/>
                </Hyperlink>
            </TextBlock>
            <TextBlock x:Name="StatusTextBlock" Foreground="Red" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
        </StackPanel>

    </Grid>
</Window>